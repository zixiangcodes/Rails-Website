<div id="<%= dom_id post %>">

  <h1>
    <%= post.title %>
  </h1>

  <p>
    <%= post.body %>
  </p>

 <% if post.image.attached? %>
    <div class="post-image-container">
      <%= image_tag post.image, class: "responsive-image", style: "max-width: 750px; height: auto;" %>
    </div>
  <% else %>
    <p>No image attached</p>
  <% end %>

</div>
